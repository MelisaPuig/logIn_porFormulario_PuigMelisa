<form action="/login" method="post">
  <div class="login">
    <span class="login_titulo">Login de usuario</span>
    <label class="login_label" for="username">Nombre de usuario</label>
    <input
      id="username"
      type="text"
      name="username"
      placeholder="Nombre de usuario"
    />
    <button
      id="login_submit"
      type="submit"
      class="btn btn-sucess mt-3 mb-5"
    >Enviar</button>
  </div>
</form>